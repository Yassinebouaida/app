{
  "name": "khabeer-al-hay-backend",
  "version": "1.0.0",
  "description": "Backend API for Khabeer Al-Hay home maintenance app - connecting locals with craftsmen",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio"
  },
  "keywords": [
    "home-maintenance",
    "craftsmen",
    "service-marketplace",
    "nestjs",
    "graphql",
    "prisma",
    "arabic"
  ],
  "author": "Khabeer Al-Hay Team",
  "license": "MIT",
  "dependencies": {
    "@nestjs/apollo": "^12.2.1",
    "@nestjs/common": "^10.4.10",
    "@nestjs/core": "^10.4.10",
    "@nestjs/graphql": "^12.2.1",
    "@nestjs/jwt": "^10.2.1",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.10",
    "@nestjs/platform-socket.io": "^10.4.10",
    "@nestjs/websockets": "^10.4.10",
    "@prisma/client": "^6.2.1",
    "apollo-server-express": "^3.13.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "graphql": "^16.9.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.2.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.11",
    "@nestjs/testing": "^10.4.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/passport-jwt": "^4.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
